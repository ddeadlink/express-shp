<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
      <div class="alert alert-success" id='success' {{#if noMsg}}hidden{{/if}}>
        {{ successMsg }}
      </div>
  </div>

</div>

{{# each products  }}
<div class="row">
  {{# each this }}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{ this.imagePath }}" class="img-responsive" alt="...">
      <div class="caption">
        <h3>{{ this.title }}</h3>
        <p>{{ this.description }}</p>
        <div class="clearfix">
          <div class="price pull-left">
            ${{this.price}}
          </div>
          <p><a href="/add/{{this._id}}" class="btn btn-success pull-right" role="button">Add</a></p>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/each}}
